
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListaBancos</title>
    <link rel="stylesheet" type="text/css" href="~/css/listaBanco.css">
</head>
<body>
    <header>
        <a class="atras" href="@Url.Action("Home","Home")"><img width="60" src="http://colegiocampestresandiego.edu.co/images/UltimosProyectos/flecha_atras.png" alt="Atras" /></a>

        <h1>Lista de Bancos</h1>
        <a class="add" href="@Url.Action("AgregarBanco","Banco")"><img width="30" src="https://jorgeguerrerogarcia.com/wp-content/uploads/2016/08/plus-5-xxl.png"  alt="Agregar" />Agregar Banco</a>
    </header>
    <main>
        <ul>
            <table align="center" >
                <tr>

                    <th>Nombre</th>
                </tr>
                @foreach (var t in ViewBag.listaBancos)
                {
                    <tr>

                        <td class="t">@t.Nombre</td>
                        <td><a href="@Url.Action("EliminarBancos","Banco",new { codigo=t.Codigo })">
    <img width="40" src="http://contraloriadelmagdalena.gov.co/contratacion/imagenes/botones/eliminar.png" alt="Eliminar" />
</a></td>

                    </tr>
                }
            </table>
            
        </ul>
        
    </main>
    



</body>
</html>
