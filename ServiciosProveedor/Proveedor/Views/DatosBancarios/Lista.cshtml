
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Datos Bancarios</title>
    <link rel="stylesheet" type="text/css" href="~/css/listaDatosBancarios.css">
</head>
<body>
    <header>
        <a class="atras" href="@Url.Action("Lista","Sucursal",new { c=ViewBag.pro })">
            <img width="60" src="http://colegiocampestresandiego.edu.co/images/UltimosProyectos/flecha_atras.png" alt="Atras" />
        </a>
        <h1>Lista de Datos Bancarios</h1>

    </header>
    <main>
        <table align="center">
            <tr>


                <th>Numero de Cuenta</th>
                <th>Banco</th>
                <th>Sucursal</th>
                <th>Tipo de Cuenta</th>
            </tr>
            @foreach (var t in ViewBag.listaDatosBancarios)
            {
                <tr class="t">

                    <td class="t">@t.NumeroCuenta</td>
                    <td class="t">@t.NombreBanco</td>
                    <td class="t">@t.NombreSucursal </td>
                    <td class="t">@t.NombreTipo</td>

                    <td>
                        <a href="@Url.Action("EliminarDatosBancarios","DatosBancarios",new { codigo=t.Codigo,p=t.ProveedorC })">
                            <img width="40" src="http://contraloriadelmagdalena.gov.co/contratacion/imagenes/botones/eliminar.png" alt="Eliminar" />
                        </a>
                    </td>




                </tr>
            }


        </table>

    </main>
    
    
</body>
</html>
