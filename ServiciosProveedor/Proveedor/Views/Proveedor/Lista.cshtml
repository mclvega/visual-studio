
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Informacion de Proveedor</title>
    <link rel="stylesheet" type="text/css" href="~/css/listaProveedor.css">
</head>
<body>
    <header>
        <a class="atras" href="@Url.Action("Home","Home")">
            <img width="60" src="http://colegiocampestresandiego.edu.co/images/UltimosProyectos/flecha_atras.png" alt="Atras" />
        </a>
        <h1>Informacion de Proveedor</h1>
        <a class="add" href="@Url.Action("AgregarProveedor","Proveedor")">
            <img width="30" src="https://jorgeguerrerogarcia.com/wp-content/uploads/2016/08/plus-5-xxl.png" alt="Agregar" />
            Agregar Proveedor
        </a>
    </header>
    <main>
        <table align="center">
            <tr>
                <th>Opciones</th>
                <th>Rut</th>
                <th>Nombre</th>
                <th>Username</th>
                <th>Password</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>&nbsp;&nbsp;&nbsp;&nbsp;Sucursales</th>
            </tr>
            @foreach (var t in ViewBag.listaProveedor)
            {
                <tr class="t">
                    <td>
                        <a href="@Url.Action("EliminarProveedor","Proveedor",new { rut=t.Rut })">
                            <img width="40" src="http://contraloriadelmagdalena.gov.co/contratacion/imagenes/botones/eliminar.png" alt="Eliminar" />
                        </a>
                        <a href="@Url.Action("Editar","Proveedor",new { rut=t.Rut })">
                            <img width="30" src="https://cdn.pixabay.com/photo/2017/06/06/00/33/edit-icon-2375785_960_720.png" alt="Editar" />
                        </a>
                    </td>
                    <td class="t">@t.Rut</td>
                    <td class="t">@t.Nombre</td>
                    <td class="t">@t.Usuario</td>
                    <td class="t">@t.Pass</td>
                    <td class="t">@t.Correo</td>
                    <td class="t">@t.Telefono</td>

                    <td><a href="@Url.Action("Lista","Sucursal",new { c=t.Codigo })">
    <img width="30" src="http://www.inspiri.es/wp-content/uploads/2013/03/lista.png" alt="Listar" />
    Listar
</a></td>
                    <td><a href="@Url.Action("AgregarSucursal","Sucursal",new { c=t.Codigo })"> <img width="30" src="https://jorgeguerrerogarcia.com/wp-content/uploads/2016/08/plus-5-xxl.png" alt="Agregar"</a> Agregar </td>

                </tr>
            }
        </table>
    </main>
    
   
</body>
</html>
