
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Lista de Alimentos</title>
    <link rel="stylesheet" type="text/css" href="~/css/listaAlimento.css">
</head>
<body>
    <header>
        <a href="@Url.Action("Lista","Sucursal",new { c=ViewBag.pro })"><img width="60" src="http://colegiocampestresandiego.edu.co/images/UltimosProyectos/flecha_atras.png" alt="Atras" /></a>
        <h1>Lista de Alimentos</h1>

    </header>
    <main>
        <table border="1">
            <tr>

                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Fecha Elaboracion</th>
                <th>Fecha Vencimiento</th>
                <th>Stock</th>
                <th>Sucursal</th>
                <th>Tipo</th>
                <th>Categoria</th>
                <th>Foto</th>
                <th>Opciones</th>
            </tr>
            @foreach (var t in ViewBag.listaAlimentos)
            {
                <tr>

                    <td>@t.Nombre</td>
                    <td>@t.Descripcion</td>
                    <td>@t.Precio</td>
                    <td>@t.Fecha_elaboracion</td>
                    <td>@t.Fecha_vencimiento</td>
                    <td>@t.Stock</td>
                    <td>@t.DatosSucursal</td>
                    <td>@t.DatosTipo</td>
                    <td>@t.DatosCategoria</td>
                    <td><img width="100" height="100" src="@t.Foto" /></td>
                    <td>
                        <a href="@Url.Action("Eliminar","Alimento",new { c=t.Codigo,pro=t.ProveedorC })"><img width="40" src="http://contraloriadelmagdalena.gov.co/contratacion/imagenes/botones/eliminar.png" alt="Eliminar" /></a>
                    
                        <a href="@Url.Action("Editar","Alimento",new { c=t.Codigo,p=t.Sucursal  })">
                            <img width="30" src="https://cdn.pixabay.com/photo/2017/06/06/00/33/edit-icon-2375785_960_720.png" alt="Editar" />
                        </a>
                    </td>




                </tr>
            }
        </table>
    </main>
    

    
</body>
</html>
