
@{
    Layout = null;
}

@model Proveedor.ViewModels.Alimento.AlimentoVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar Alimento</title>
    <link rel="stylesheet" type="text/css" href="~/css/add.css">
</head>
<body>
    <header>
        <h1>Agregar Alimentos</h1>

    </header>
    <main>
        @using (Html.BeginForm("AgregarAlimento", "Alimento"))
        {
            <table align="center"> 

                <tr>
                    <td>Nombre :</td>
                    <td><input type="text" pattern="[A-Za-z0-9ñÑáéíóúÁÉÍÓÚ\s]+" required id=@Html.TextBoxFor(model => model.Alimento.Nombre)</td>
                </tr>
                <tr>
                    <td>Descripcion :</td>
                    <td><input type="text" pattern="[A-Za-z0-9ñÑáéíóúÁÉÍÓÚ\s]+" required id=@Html.TextBoxFor(model => model.Alimento.Descripcion)</td>
                </tr>
                <tr>
                    <td>URL Foto :</td>
                    <td><input type="text" required id=@Html.TextBoxFor(model => model.Alimento.Foto)</td>
                </tr>
                <tr>
                    <td>Precio :</td>
                    <td><input type="number" min="1" pattern="^[0-9]+" required id=@Html.TextBoxFor(model => model.Alimento.Precio)</td>
                </tr>
                <tr>
                    <td>Fecha Elaboracion :</td>
                    <td><input type="date" required id=@Html.TextBoxFor(model => model.Alimento.Fecha_elaboracion)</td>
                </tr>
                <tr>
                    <td>Fecha Vencimiento :</td>
                    <td><input type="date" required id=@Html.TextBoxFor(model => model.Alimento.Fecha_vencimiento)</td>
                </tr>
                <tr>
                    <td>Stock :</td>
                    <td><input type="number" required min="1" pattern="^[0-9]+" id=@Html.TextBoxFor(model => model.Alimento.Stock)</td>
                </tr>
                <tr>
                    <input type="hidden" value="@ViewBag.c" id=@Html.TextBoxFor(model => model.Alimento.Sucursal)
                    <input type="hidden" value="@ViewBag.p" id=@Html.TextBoxFor(model => model.Alimento.ProveedorC)
                </tr>
                <tr>
                    <td>Categoria :</td>
                    <td>
                        <select required id=@Html.TextBoxFor(model => model.Alimento.CategoriaAlimento)>

                            @foreach (var t in ViewBag.listaCategorias)
                            {
                                <option value="@t.Codigo">@t.Nombre</option>
                            }

                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Tipo :</td>
                    <td>
                        <select required id=@Html.TextBoxFor(model => model.Alimento.TipoAlimento)>

                            @foreach (var t in ViewBag.listaTipos)
                            {
                                <option value="@t.Codigo">@t.Nombre</option>
                            }

                        </select>
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td><input type="submit" value="Guardar" /></td>
                </tr>
            </table>
        }
    </main>
    
   
</body>
</html>
