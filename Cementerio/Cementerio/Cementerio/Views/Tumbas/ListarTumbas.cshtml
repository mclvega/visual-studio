
@{
    ViewBag.Title = "ListarTumbas";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Tumbas</title>
    <link rel="stylesheet" type="text/css" href="~/css/listaCategoria.css">
</head>
<body>
    <header>
        <a class="atras" href="@Url.Action("Index","Home")">
            <img width="60" src="http://colegiocampestresandiego.edu.co/images/UltimosProyectos/flecha_atras.png" alt="Atras" />
        </a>
        <h1>Lista de Tumbas</h1>
         </header>
    <main>
        <ul>
            <table align="center">
                <tr>

                    <th>Rut Fallecido</th>
                    <th>Nombre Fallecido</th>
                    <th>Tipo de Tumba</th>
                    <th>Material de la Tumba</th>
                </tr>
                @foreach (var t in ViewBag.lista)
                {
                    <tr>

                        <td class="t">@t.fallecido_rut</td>
                        <td class="t">@t.fallecido_nombre</td>
                        <td class="t">@t.tipo_tumba_nombre</td>
                        <td class="t">@t.material_nombre</td>



                    </tr>
                    
                }
            </table>
        </ul>
    </main>


</body>
</html>