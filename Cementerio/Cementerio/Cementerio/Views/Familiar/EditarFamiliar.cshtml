
@{
    ViewBag.Title = "EditarFamiliar";
}

@model Cementerio.ViewModels.Personas.FamiliarVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Fallecidos</title>
    <link rel="stylesheet" type="text/css" href="~/css/add.css">
</head>
<body>
    <header>
        <h1>Editar Fallecidos</h1>
    </header>
    <main>
        @using (Html.BeginForm("EditarFamiliar", "Familiar"))
        {
            <table>

                <tr>
                    <td>Rut :</td>
                    <td>
                        @Html.HiddenFor(model => model.Familiar.id)
                        @Html.HiddenFor(model => model.Familiar.persona_id)
                        <input required type="text" id=@Html.TextBoxFor(model => model.Familiar.rut)
                    </td>
                </tr>
                <tr>
                    <td>Nombre :</td>
                    <td>

                        <input required type="text" pattern="[A-Za-z0-9ñÑáéíóúÁÉÍÓÚ\s]+" id=@Html.TextBoxFor(model => model.Familiar.nombre)
                    </td>
                </tr>
                <tr>
                    <td>Apellido Paterno :</td>
                    <td>

                        <input required type="text" pattern="[A-Za-z0-9ñÑáéíóúÁÉÍÓÚ\s]+" id=@Html.TextBoxFor(model => model.Familiar.apellidoPaterno)
                    </td>
                </tr>
                <tr>
                    <td>Apellido Materno :</td>
                    <td>

                        <input required type="text" pattern="[A-Za-z0-9ñÑáéíóúÁÉÍÓÚ\s]+" id=@Html.TextBoxFor(model => model.Familiar.apellidoMaterno)
                    </td>
                </tr>
                <tr>
                    <td>Edad :</td>
                    <td>

                        <input required type="number" id=@Html.TextBoxFor(model => model.Familiar.edad)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Guardar" /></td>
                </tr>
            </table>
        }
    </main>
</body>
</html>
