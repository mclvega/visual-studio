
@{
    ViewBag.Title = "ListarFamiliares";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Familiar</title>
    <link rel="stylesheet" type="text/css" href="~/css/listaCategoria.css">
</head>
<body>
    <header>
        <a class="atras" href="@Url.Action("Index","Home")">
            <img width="60" src="http://colegiocampestresandiego.edu.co/images/UltimosProyectos/flecha_atras.png" alt="Atras" />
        </a>
        <h1>Lista de Familiar</h1>
        <a class="add" href="@Url.Action("AgregarFamiliar","Familiar")"><img width="30" src="https://jorgeguerrerogarcia.com/wp-content/uploads/2016/08/plus-5-xxl.png" alt="Agregar" />Agregar Familiares</a>
    </header>
    <main>
        <ul>
            <table align="center">
                <tr>
                    <th>Rut</th>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Edad</th>
                </tr>
                @foreach (var t in ViewBag.lista)
                {
                    <tr>
                        <td class="t">@t.rut</td>
                        <td class="t">@t.nombre</td>
                        <td class="t">@t.apellidoPaterno</td>
                        <td class="t">@t.apellidoPaterno</td>
                        <td class="t">@t.edad</td>
                        <td>
                            <a href="@Url.Action("EliminarFamiliar","Familiar",new { rut=t.rut })">
                                <img width="40" src="http://contraloriadelmagdalena.gov.co/contratacion/imagenes/botones/eliminar.png" alt="Eliminar" />
                            </a>
                            <a href="@Url.Action("EditarFamiliar","Familiar",new { c=t.rut })">
                                Editar
                            </a>
                        </td>

                    </tr>
                }
            </table>
        </ul>
    </main>


</body>
</html>

