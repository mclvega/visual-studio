
@{
    ViewBag.Title = "AgregarFallecido";
}

@model Cementerio.ViewModels.Personas.FallecidoVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar Fallecido</title>
    <link rel="stylesheet" type="text/css" href="~/css/add.css">
</head>
<body>
    <header>
        <h1>Agregar Fallecido</h1>
    </header>
    <main>
        @using (Html.BeginForm("AgregarFallecido", "Fallecidos"))
        {
        <table align="center">

            <tr>
                <td>Rut :</td>
                <td><input required type="text"  id=@Html.TextBoxFor(model => model.Fallecido.rut)</td>
            </tr>
            <tr>
                <td>Nombre :</td>
                <td><input required type="text" pattern="[A-Za-z0-9ñÑáéíóúÁÉÍÓÚ\s]+" id=@Html.TextBoxFor(model => model.Fallecido.nombre)</td>
            </tr>
            <tr>
                <td>Apellido Paterno :</td>
                <td><input required type="text" pattern="[A-Za-z0-9ñÑáéíóúÁÉÍÓÚ\s]+" id=@Html.TextBoxFor(model => model.Fallecido.apellidoPaterno)</td>
            </tr>
            <tr>
                <td>Apellido Materno  :</td>
                <td><input required type="text" pattern="[A-Za-z0-9ñÑáéíóúÁÉÍÓÚ\s]+" id=@Html.TextBoxFor(model => model.Fallecido.apellidoMaterno)</td>
            </tr>
            <tr>
                <td>Edad :</td>
                <td><input required type="number"  id=@Html.TextBoxFor(model => model.Fallecido.edad)</td>
            </tr>

            <tr>
                <td></td>
                <td><input type="submit" value="Guardar" /></td>
            </tr>
        </table>
        }
    </main>
</body>
</html>

