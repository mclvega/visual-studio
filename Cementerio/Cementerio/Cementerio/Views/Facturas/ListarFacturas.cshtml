
@{
    ViewBag.Title = "ListarFacturas";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Facturas</title>
    <link rel="stylesheet" type="text/css" href="~/Views/CSS/Estilo.scss">
</head>
<body>
    <header>
        <a class="atras" href="@Url.Action("Index","Home")">
            <img width="60" src="http://colegiocampestresandiego.edu.co/images/UltimosProyectos/flecha_atras.png" alt="Atras" />
        </a>
        <h1>Lista de Facturas</h1>
        <a class="add" href="@Url.Action("AgregarTumba","Tumbas")"><img width="30" src="https://jorgeguerrerogarcia.com/wp-content/uploads/2016/08/plus-5-xxl.png" alt="Agregar" />Agregar Facturas </a>
    </header>
    <main>
        <ul>
            <table align="center">
                <tr>

                    <th>Rut Fallecido</th>
                    <th>Nombre Fallecido</th>
                    <th>Tipo de Tumba</th>
                    <th>Capacidad del sector</th>
                    <th>extension variable del sector</th>
                    <th>Rut Familiar</th>
                    <th>Nombre Familiar</th>
                    <th>Contacto Familiar</th>
                    <th>Fecha Emision</th>
                    <th>Total</th>
                </tr>
                @foreach (var t in ViewBag.lista)
                {
                <tr>

                    <td >@t.fallecido_rut</td>
                    <td >@t.fallecido_nombre @t.fallecido_apellidoPaterno @t.fallecido_apellidoMaterno</td>
                    <td >@t.tumba_tipo</td>
                    <td >@t.sector_capacidad</td>
                    <td >@t.sector_extension_variable</td>
                    <td >@t.familiar_rut</td>
                    <td >@t.familiar_nombre @t.familiar_apellidoPaterno @t.familiar_apellidoMaterno</td>
                    <td >@t.familiar_telefono</td>
                    <td >@t.fecha_emision</td>
                    <td >$@t.total</td>



                </tr>
                }
            </table>
        </ul>
    </main>


</body>
</html>
